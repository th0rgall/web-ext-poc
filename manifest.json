{
    "manifest_version": 3,
    "version": "0.1",
    "name": "Readup POC",
    "background": {
        "service_worker": "background.js"
    },
    "permissions": [
        "tabs"
    ],
    "action": {
        "default_title": "Read with Readup"
    },
    "host_permissions": [
        "*://*/*"
    ],
    "externally_connectable": {
        "matches": [
            "https://web.thorgalle.me/*"
        ]
    }
}